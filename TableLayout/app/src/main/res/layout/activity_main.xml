<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:stretchColumns="1"
    android:collapseColumns="0"
    tools:context=".MainActivity">

    <!-- android:stretchColumns="1" 1number colum k prosharito kora hoyeche-->
    <!-- android:collapseColumns="0" 0number colum k invisible kora hoyeche -->
    <!--android:layout_span="4" 4ta colum er jayga niyeche -->
    <!-- android:layout_column="2" 2 number column er nice button ta bosheche -->
    <TableRow
        android:id="@+id/titleRowId"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_span="4"
            android:layout_gravity="center"
            android:text="Student Details"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

    </TableRow>

    <TableRow
        android:layout_marginTop="20dp"
        android:id="@+id/headerId"
        android:background="#BF8498"
        >

        <TextView
            android:layout_height="32dp"
            android:text="FirstName"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_height="32dp"
            android:text="LastName"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_height="32dp"
            android:text="GPA"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_height="32dp"
            android:text="DOB"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            />

    </TableRow>

    <TableRow
        android:layout_marginTop="1dp"
        android:id="@+id/details1Id"
        android:background="#78c785"
        >

        <TextView
            android:layout_height="30dp"
            android:text="Jannatul"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />

        <TextView
            android:layout_height="30dp"
            android:text="Ferdoush"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />

        <TextView
            android:layout_height="30dp"
            android:text="4.00"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />

        <TextView
            android:layout_height="30dp"
            android:text="12/12/98"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />

    </TableRow>

    <TableRow
        android:layout_marginTop="1dp"
        android:id="@+id/details2Id"
        android:background="#78c785"
        >

        <TextView
            android:layout_height="30dp"
            android:text="Sabrina"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />

        <TextView
            android:layout_height="30dp"
            android:text="Sultana"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />

        <TextView
            android:layout_height="30dp"
            android:text="4.00"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />

        <TextView
            android:layout_height="30dp"
            android:text="26/04/98"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />

    </TableRow>

    <TableRow
        android:id="@+id/buttonRowId"
        >

        <Button
            android:text="submit"
            android:layout_column="2"
            />
        <Button
            android:text="clear"
            android:layout_column="3"
            />

    </TableRow>

</TableLayout>